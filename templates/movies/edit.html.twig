{% extends "./base.html.twig" %}

{% block body %}
	<div class="w-4/5 m-auto text-left">
		<div class="py-15">
			<h1 class="text-6xl">
				Edit Movie Review
			</h1>
		</div>
	</div>

	<div class="w-4/5 m-auto pt-20">

		{{ form_start(form) }}

		{{ form_widget(form) }}


		<a href="/movies/edit/{{ movie.id }}" class="bg-green-500 font-bold py-2 px-4 rounded
				        transition-all hover:bg-green-300">
			Update Movie
		</a>
		<a href="/movies/delete/{{ movie.id }}" class="bg-red-500 font-bold py-2 px-4 ml-6 rounded
				        transition-all hover:bg-red-300">
			Delete Movie
		</a>

		{{ form_end(form) }}

	</div>
{% endblock %}
